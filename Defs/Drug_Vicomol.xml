<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>Vicomol</defName>
    <label>vicomol pill</label>
    <description>Vicomol is a good painkiller with mild addiction qualities. Combined from opimol and neutroamine, then processed and stamped into pill form. More addictive than raw opimol, but neutralizes most pains.</description>
    <descriptionHyperlinks>
      <HediffDef>VicomolHigh</HediffDef>
      <HediffDef>OpimolTolerance</HediffDef>
      <HediffDef>OpimolAddiction</HediffDef>
      <HediffDef>ChemicalDamageModerate</HediffDef>
      <HediffDef>ChemicalDamageSevere</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Vicomol</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <MarketValue>24</MarketValue>
      <Mass>0.02</Mass>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <foodType>Processed</foodType>
      <joy>0.85</joy>
      <joyKind>Chemical</joyKind>
      <baseIngestTicks>240</baseIngestTicks>
      <nurseable>true</nurseable>
      <drugCategory>Hard</drugCategory>
      <ingestSound>Ingest_Smoke</ingestSound>
      <ingestEffect>Smoke_Joint</ingestEffect>
      <ingestEffectEat>EatVegetarian</ingestEffectEat>
      <ingestHoldOffsetStanding>
         <northDefault>
          <offset>(0.27,0,0.08)</offset>
          <behind>true</behind>
        </northDefault>
        <east>
          <offset>(0.45,0,0.08)</offset>
        </east>
        <south>
          <offset>(0.27,0,0.08)</offset>
        </south>
        <west>
          <offset>(-0.50,0,0.08)</offset>
          <flip>true</flip>
        </west>
      </ingestHoldOffsetStanding>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Taking {0}</ingestCommandString>
      <ingestReportString>Taking {0}.</ingestReportString>
      <useEatingSpeedStat>false</useEatingSpeedStat>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>VicomolHigh</hediffDef>
          <severity>0.35</severity>
          <toleranceChemical>OpimolReceptors</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>-0.25</offset>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>OpimolTolerance</hediffDef>
          <severity>0.05</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>Research_AdvancedOpimolRefining</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Opimol>1</Opimol>
      <Neutroamine>1</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>OpimolReceptors</chemical>
        <addictiveness>0.08</addictiveness>
        <minToleranceToAddict>0.50</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.2</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>20</listOrder>
        <overdoseSeverityOffset>0.08~0.10</overdoseSeverityOffset>
        <largeOverdoseChance>0.01</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>VicomolHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>high on vicomol</label>
    <description>Active vicomol in the body, causing a large euphoric high and relaxation.</description>
    <defaultLabelColor>(0.5,0.5,0)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <label>vicomol high</label>
          <restFallFactor>1.35</restFallFactor>
          <painOffset>-0.75</painOffset>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <postFactor>0.85</postFactor>
            </li>
            <!--
            <li>
              <capacity>Consciousness</capacity>
              <offset>0.80</offset>
            </li>
            <li>
              <capacity>Consciousness</capacity>
              <postFactor>0.80</postFactor>
            </li>
            <li>
              <capacity>Consciousness</capacity>
              <setMax>0.80</setMax>
            </li>
            -->
          </capMods>
          <hediffGivers>
            <li Class="HediffGiver_RandomDrugEffect">
              <hediff>Carcinoma</hediff>
              <baseMtbDays>200</baseMtbDays>
              <minSeverity>0.50</minSeverity>
              <partsToAffect>
                <li>Kidney</li>
              </partsToAffect>
              <countToAffect>1</countToAffect>
            </li>
          </hediffGivers>
        </li>
      </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>VicomolHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>VicomolHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
    <li>
      <label>vicomol high</label>
      <description>Oh man! This is amazing. I feel great!</description>
      <baseMoodEffect>16</baseMoodEffect>
    </li>
    </stages>
  </ThoughtDef>  

</Defs>